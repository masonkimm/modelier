<%- include ("../partials/header.ejs")%>

<div class="container">
  <div class="row">
    <h1 class="text-center">Edit Design: <%= design.name %></h1>

    <div class="" style="width: 30%; margin: 30px auto">
      <form
        class="align-items-center"
        action="/design/<%= design._id %>?_method=PUT"
        method="POST"
      >
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="design[name]"
            placeholder="name"
            value="<%= design.name %>"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="number"
            name="design[price]"
            min="0.01"
            step="0.01"
            value="<%= design.price %> "
          />
        </div>

        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="design[image]"
            placeholder="image-url"
            value="<%= design.image %> "
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="design[description]"
            placeholder="description"
            value="<%= design.description %> "
          />
        </div>
        <div class="form-group">
          <label for="location">Location</label>
          <input class="form-control" type="text" name="location" id="location" value="<%= design.location %>">
      </div>

        <div class="form-group">
          <button class="btn btn-md btn-info btn-block">Submit</button>
        </div>
      </form>
      <a href="/designs">Go Back</a>
    </div>
  </div>
</div>

<%- include ("../partials/footer.ejs")%>
